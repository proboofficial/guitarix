#!/usr/bin/env python
# encoding: utf-8
import sys

def configure(conf):
    pass

def build(bld):
    lv2_base = 'gxtuner'

    if sys.platform != 'darwin' or any('clang' not in s for s in bld.env["CXX"]):
        compile_flags = ['-Wl,-z,noexecstack','-Wl,-z,relro,-z,now','-Wl,--exclude-libs,ALL']
    else:
        compile_flags = []

    bld.lv2(
        lv2_base = lv2_base,
        source   = ['gxtuner.cpp'],
        includes = ['../faust','./', '../DSP'],
        cxxflags=['-fvisibility=hidden'] + compile_flags,
        use = ['LV2CORE','SIGC','GX_RESAMPLER','FFTW3'],
        )
    bld.lv2_gui(
        lv2_base = lv2_base,
        source   = ' gx_tuner_ui.cpp',
        includes = ['../xputty/header','../xputty/header/widgets','../xputty/resources', '../xputty/lv2_plugin'],
        cxxflags=['-fvisibility=hidden'] + compile_flags,
        use = ['xcairo','X11', 'CAIRO','LV2CORE'],
        )
